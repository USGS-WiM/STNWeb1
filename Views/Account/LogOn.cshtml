@model STNWeb.Models.LogOnModel

@{
    Layout = "~/Views/Shared/_UnauthorizedLayout.cshtml";
    ViewBag.Title = "Log On";
}

<script src="@Url.Content("~/Assets/Scripts/jquery-1.8.3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Assets/Scripts/jquery-ui-1.10.4.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Assets/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Assets/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm()) {
    <div id="loginForm"><div style="color:#C00000;font-size:x-large;text-align:center;font-family:'BryantBold';">TRAINING</div>
        <div class="login-title"><h2>USGS Short-Term Network: Supporting the Storm-Tide Network and Riverine Flooding</h2></div>

        <div class="login-title">
            @Html.LabelFor(m => m.UserName)
        </div>
            <div>
                @Html.TextBoxFor(m => m.UserName, new { @class = "login-field" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>  

            <div class="login-title">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @class = "login-field" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            
            <p class="right">
            <button type="submit" class="logonButton">
                <a href="javascript:void(0);" class="STNButton orange icon"><span class="loginIcon">Log On</span></a>
            </button>
            </p>

            <div class="editor-label">
                @*Html.CheckBoxFor(m => m.RememberMe)
                Html.LabelFor(m => m.RememberMe)*@
            </div>

        <div style="float:left">Contact Marie Peppler (mpeppler@usgs.gov, 608-821-3821) for assistance.</div>
        <br clear="all" />
    </div>
}
<script type="text/javascript">
    window.onload = function () {
        var txtbox = document.getElementById("UserName");
        txtbox.focus();
    }
</script>